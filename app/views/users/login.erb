	 <link href="https://fonts.googleapis.com/css?family=Sigmar+One" rel="stylesheet">
</head>

<body>
  <div class="container">
  <form class="form-signin">
    <h2 class="form-signin-heading">Welcome back you creep</h2>
    <% if flash.has?(:message) %>
    <%= flash[:message] %>
    <% end %>
    <form method=POST action="/users/login">
    <p class="form-control"><input type="text" name="email" placeholder="Email" required></p>
    <p class="form-control"><input type="password" name="password_digest" placeholder="Password"></p>
    <a href="/users/home" class="login-button">Log In</a>
  </form>
</body>



